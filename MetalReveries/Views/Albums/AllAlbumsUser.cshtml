@{
    ViewBag.Title = "AllAlbums";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Albums</h2>


<table id="albums" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Album</th>
            <th>Band</th>
            <th>Genre</th>
            <th>Release Date</th>
            <th>Price(RON)</th>
            <th>Buy</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#albums").DataTable({
                ajax: {
                    //url: "/api/albums",
                    url: "/api/albums/get3/a978600c-919b-48ae-9de1-cd245a9a1328",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name"
                        /*
                        render: function (data, type, album) {
                            return "<a href='/albums/edit/" + album.id + "'>" + album.name + "</a>";
                        }*/
                    },
                    {
                        data: "band.name"
                    },
                    {
                        data: "genre.name"
                    },
                    {
                        data: "releaseDate"
                    },
                    {
                        data: "price"
                    },
                    {
                        data: "id",
                        render: function (data, type, album) {
                            return "<a href='/albums/buy/" + album.id + "'>Buy</a>";
                        }
                    }
                ]
            });
        })
    </script>
}

