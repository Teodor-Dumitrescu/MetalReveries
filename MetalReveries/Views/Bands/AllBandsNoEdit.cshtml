@{
    ViewBag.Title = "AllBands";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Bands</h2>

<table id="bands" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Band</th>
            <th>Country</th>
            <th>Year Founded</th>
            <th>Albums on site</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#bands").DataTable({
                ajax: {
                    url: "/api/bands",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, band) {
                            return "<a href='/bands/details/" + band.bandId + "'>" + band.name + "</a>";
                        }
                    },
                    {
                        data: "country"
                    },
                    {
                        data: "yearFounded"
                    },
                    {
                        data: "nrAlbumsOnSite"
                    }
                ]
            });
        })
    </script>
}
