
@{
    ViewBag.Title = "AllUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Users</h2>


<table id="users" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Email</th>
            <th>Albums Bought</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#users").DataTable({
                ajax: {
                    url: "/getUsers",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "email",
                        render: function (data, type, user) {
                            return "<a href='/account/details/" + user.id + "'>" + data + "</a>";
                        }
                    },
                    {
                        data: "albumsBought",
                        render: function (data, type, user) {
                            return "<a href='/albums/albumsOwnedOtherUser/" + user.id + "'>" + data + "</a>";
                        }
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn-link js-delete' data-user-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });

            $("#users").on("click", ".js-delete", function () {
                var button = $(this);
                //bootbox.alert(button.attr("data-album-id"));
                bootbox.confirm("Are you sure you want to delete this album?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/albums/" + button.attr("data-album-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });
        })
    </script>
}
